export MASK=`echo $SLURMD_NODENAME $CORES_PER_SLURMD | gawk '{gsub("-"," "); n=0; for (i=0;i<$3;i++) { n=n+2**(i+int($1));} printf("%x",n) }'`
export SLURM_CPU_BIND=verbose,mask_cpu:$MASK

echo wrapping srun : actually running  /project/k01/kortass/CLE6/SLURM/opt/slurm/bin/srun $*
echo under binding : $SLURM_CPU_BIND

/project/k01/kortass/CLE6/SLURM/opt/slurm/bin/srun $*


